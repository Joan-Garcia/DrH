<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPresentacion"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#f57f5a"
                android:padding="6dp">
                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imagenContaco"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"

                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        app:srcCompat="@drawable/contaco"

                        android:layout_alignParentLeft="true"/>


                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tipoContacto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ADMINISTRADOR BD"
                                android:paddingRight="2dp"
                                android:fontFamily="@font/balthazar"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#3B4341"/>
                            <TextView
                                android:id="@+id/nombreContacto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text="JORGE CARREÓN"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="@font/balthazar"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/correoContaco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CONTACTO"
                                android:paddingRight="2dp"
                                android:fontFamily="@font/balthazar"
                                android:textSize="12sp"
                                android:textColor="#3B4341"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/correoContacto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text="jace62@hotmail.es"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="@font/balthazar"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/telCont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NÚMERO DE TELÉFONO"
                                android:paddingRight="2dp"
                                android:fontFamily="@font/balthazar"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#3B4341"/>
                            <TextView
                                android:id="@+id/numeroContac"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text="4773767637"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="@font/balthazar"/>
                        </LinearLayout>

                    </LinearLayout>


                    </LinearLayout>
                        <ImageView
                            android:id="@+id/redSocial"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                </FrameLayout>

            </FrameLayout>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>