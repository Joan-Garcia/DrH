<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cvMas"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:background="#3B4341"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">
                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iconImageViewMas"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        app:srcCompat="@drawable/mascota"
                        android:layout_alignParentLeft="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IDM"
                            android:paddingLeft="14dp"
                            android:paddingRight="5dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginLeft="4dp"
                            android:fontFamily="@font/balthazar"
                            android:textStyle="bold"
                            />
                        <TextView

                            android:id="@+id/idMasc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45"
                            android:layout_marginTop="60dp"
                            android:fontFamily="@font/balthazar"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NOMBRE MASCOTA"
                                android:paddingRight="2dp"
                                android:fontFamily="@font/balthazar"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/nombreMascota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text="ZEUS"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/balthazar"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NOMPRO"
                                android:paddingRight="2dp"
                                android:fontFamily="@font/balthazar"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/nombreProp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text="CARREÃ“N ESTRADA JORGE ARMANDO"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/balthazar"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FECHA DE NACIMIENTO"
                                android:paddingRight="2dp"
                                android:fontFamily="@font/balthazar"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/fechaNacimiento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text="2020/08/15"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/balthazar"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ESPECIE"
                                android:paddingRight="2dp"
                                android:fontFamily="@font/balthazar"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/especie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text="PERRO"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/balthazar"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ESPECIE"
                                android:paddingLeft="4dp"
                                android:fontFamily="@font/balthazar"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/raza"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text="HUSKY"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/balthazar"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SEXO"
                                android:paddingRight="2dp"
                                android:fontFamily="@font/balthazar"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/sexo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text="M"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/balthazar"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="COLOR"
                                android:paddingLeft="4dp"
                                android:fontFamily="@font/balthazar"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text="CAFE"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/balthazar"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TATUAJE"
                                android:paddingRight="2dp"
                                android:fontFamily="@font/balthazar"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tatuaje"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text="NO"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/balthazar"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MICROCHIP"
                                android:paddingLeft="4dp"
                                android:fontFamily="@font/balthazar"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/microchip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text="NO"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/balthazar"/>

                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>