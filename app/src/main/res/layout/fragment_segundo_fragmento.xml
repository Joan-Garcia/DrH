<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".segundoFragmento"
    android:background="#b7a986">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="-170dp"
        android:layout_gravity="center"
        android:background="@drawable/loggin"/>
    <ImageButton
        android:id="@+id/btnSalir"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/salir"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />
    <ImageButton
        android:id="@+id/btnAyuda"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/pregunta"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="330dp"
        />

    <TextView
        android:id="@+id/textNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/balthazar"
        android:text="@string/hola"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/balthazar"
        android:text="NOMBRE VETERINARIO"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/layoutP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/guiauser"
            android:backgroundTint="#b7a986"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guiaU"
            android:fontFamily="@font/balthazar"
            android:textColor="@color/white"
            android:textSize="20dp"/>

    </LinearLayout>


</FrameLayout>