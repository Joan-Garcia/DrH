<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tercerFragmentUsuario"
    android:background="#3B4341">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-300dp"
        android:fontFamily="@font/balthazar"
        android:text="PRÓXIMAS FECHAS"
        android:textColor="@color/white"
        android:textSize="36dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="-250dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/balthazar"
            android:text="ESTADO"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <ImageView
            android:layout_gravity="center"

            android:background="@android:color/holo_red_light"
            android:layout_width="15dp"
            android:layout_height="15dp"
            />
        <TextView
            android:fontFamily="@font/balthazar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FECHA PASADA"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:layout_gravity="center"

            android:background="@android:color/holo_green_light"
            android:layout_width="15dp"
            android:layout_height="15dp"
            />
        <TextView
            android:fontFamily="@font/balthazar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FECHA PRÓXIMA"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="-220dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/balthazar"
            android:text="TIPO"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/vacuna"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@color/white"
            />
        <TextView
            android:fontFamily="@font/balthazar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VACUNA"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/desparacitacion"
            android:background="@android:color/white"
            android:layout_width="15dp"
            android:layout_height="15dp"
            />
        <TextView
            android:fontFamily="@font/balthazar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESPARACITACIÓN"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rViewMasUsuarioT"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_marginTop="200dp">


    </androidx.recyclerview.widget.RecyclerView>
</FrameLayout>